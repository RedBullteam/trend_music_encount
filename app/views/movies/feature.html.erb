	<!-- 映画CD一覧 -->
	<h3>最新映画音楽CD</h3>
		<% if@cd_products.present? %>
			<% @cd_products.each_with_index do |cd_product, i| %>
				<div class="row">
					<div class="col-xs-6">
						<%= image_tag "#{cd_product.jacket_image}" %>
						<p>CD名：<%= cd_product.name %></p>
						<p>アーティスト名：<%= cd_product.artist.name %></p>
						<p>リリース日：<%= cd_product.release_date %></p>
					</div>
					<div class="col-xs-6">
						<%= image_tag "#{cd_product.movie.movie_image}" %>
						<p>映画名：<%= cd_product.movie.movie_name %></p>
						<p>公開日：<%= cd_product.movie.movie_release %></p>
					</div>
				</div>
			<% end %>
		<% end %>

