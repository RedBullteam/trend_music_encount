<html>
  <head>
    <style>
    .cd_position {
      padding-right: 10px;
    }
    </style>
  </head>
  <body>
<!-- CD詳細 -->
  <div class="container">
    <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-4">
          <img src="/assets/no_image.jpeg", width="300px" height="300px">
        </div>
        <div class="col-md-6">
          <table class="table table-striped">
  	          <thead>
              <tr>
                <h4>CD情報</h4>
              </tr>
              </thead>
  	          <tbody>
  	  	        <tr>
  	  	          <td>タイトル</td>
  	  	          <td><p><%= @cd_product.name %><p></td>
  	  	          <td></td>
  	  	        </tr>
  	  	        <tr>
  	  	          <td>アーティスト</td>
  	  	          <td><%= @cd_product.artist.name %></td>
  	  	          <td></td>
  	  	        </tr>
  	            <tr>
  	  	          <td>価格（税込）</td>
  	  	          <td>￥<%= @cd_product.price %></td>
  	  	          <td><% if @cd_product.stock_number == 0 then %>SOLDOUT
                      <% else %>
                      <% @cd_product.stock_number >= 1  %>在庫あり
                      <% end %>
                  </td>
  	  	        </tr>
  	        </tbody>
          </table>
          <button type="button" class="btn btn-danger btn-lg"><%= link_to "カートに入れる", cart_items_path(cd_product_id: @cd_product.id), method: :post %></button>
          <button type="button" class="btn btn-warning btn-lg">
           <% if !Favorite.exists?(user_id:current_user.id,cd_product_id:@cd_product.id) %>
            <%= link_to "お気に入り",cd_product_add_path(@cd_product),method: :post %>
            <% else %>
            <%= link_to "お気に入り解除",cd_product_add_path(@cd_product),method: :delete %>
            <% end %>
            </button>
          <table class="table table-bordered">
              <thead>
             <tr>
              <h4>商品情報</h4>
              </tr>
            </thead>
              <tbody>
          	  	<tr>
          	  	  <td>発売日</td>
          	  	  <td><%= @cd_product.release_date %></td>
          	  	</tr>
           	  	<tr>
          	  	  <td>レーベル</td>
          	  	  <td><%= @cd_product.label.name %></td>
          	  	</tr>
          	  </tbody>
          </table>
          </div>
        <div class="col-md-1"></div>
    </div>



    <h4>収録曲</h4>
      <% @discs.each do |disc| %>
        <table class="table table-hover">
                <thead>
                  <tr>
                  <p>Disc<%= disc.disc %></p>
                  </tr>
                </thead>
                <tbody>
                  <% @songs.each do |song| %>
                    <% if song.disc_id == disc.id %>
                      <tr>
                        <td><%= song.track_number_id %></td>
                        <td><%= song.name %></td>
                        <td>
                          <% selected_genre = Genre.find_by(id: song.genre_id) %>
                          <%= selected_genre.name %>
                        </td>
                      </tr>
                    <% else %>
                    <% end %>
                  <% end %>
                </tbody>
              </table>
         <% end %>
    <!-- CD詳細ここまで -->

    <!-- 映画、ドラマ、CM情報 -->
              

    <!-- 関連楽曲 -->
              <div class="well well-sm">このアーティストの関連楽曲</div>
                <table>
                  <tbody>
                	<tr>
                    <% @cds.each do |cds| %>
                    <td class="cd_position">
                  	  <img src="/assets/no_image.jpeg", width="220px" height="220px">
    					        <p><%= cds.name %></p>
    				        </td>
                    <% end %>
                	</tr>
                  </tbody>
                </table>
                <%= paginate @cds %>
    <!-- 関連楽曲ここまで -->
        </div>
      </div>
    </div>
  </body>
</html>