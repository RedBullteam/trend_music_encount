<div class="body">
    <div class="container">
    <h3>最新CM音楽CD</h3>
        <% if@cd_products.present? %>
    <% @cd_products.each do |cd_product, i| %>
            <div class="row">
                <div class="col-xs-6">
                    <% if cd_product.jacket_image.present? %>
                        <%= link_to cd_product_path(cd_product.id) do %>
                            <%= image_tag "#{cd_product.jacket_image}", :size =>'300x300' %>
                        <% end %>
                    <% else %>
                        <%= link_to cd_product_path(cd_product.id) do %>
                        <img src="/assets/no_image.jpg", width="300", height="300">
                         <% end %>
                    <% end %>
                    <p>CD名：<%= cd_product.name %></p>
                    <p>アーティスト名：<%= cd_product.artist.name %></p>
                    <p>リリース日：<%= cd_product.release_date %></p>
                </div>
                <div class="col-xs-6">
                    <!-- 動画を表示 -->
                    <iframe width="560" height="315" src=<%= cd_product.commodity.video_url %> frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                        </iframe>
                    <p>CM商品名：<%= cd_product.commodity.commodity %></p>
                    <p>公開日：<%= cd_product.commodity.upload_date %></p>
                    <% end %>
                 <% end %>
                </div>
         </div>
    </div>
</div>

