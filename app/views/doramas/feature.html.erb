　　                  <%= image_tag "#{cd_product.jacket_image}", :size =>'150x150' %>
　　                <% end %>
　　              <% else %>
　　                <%= link_to cd_product_path(cd_product.id) do %>
　　                  <img src="/assets/no_image.jpg", width="150", height="150">
　　                <% end %>
　　              <% end %>
　　          </td>
　　          <td>
　　            <p>CD名:<%= cd_product.name %></p>
　　            <p>アーティスト名:<%= cd_product.artist.name %></p>
