　　<div class="well well-sm">月曜日</div>
　　  <% @cds.each_with_index do |cd_product| %>
　　    <% if cd_product.dorama.week_id == "月曜日" %>
　　    <table class="table table-bordered">
　　      <thead>
　　        <tr>
　　          <h4><%= cd_product.dorama.name %></h4>
　　        </tr>
　　      </thead>
　　      <tbody>
　　        <tr>
　　          <td class="cd_jacket">
