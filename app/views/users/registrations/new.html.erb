<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "名前(性)" %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "名前(名)" %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "カナ名前(性)" %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "カナ名前(名)" %>
  </div>

   <div class="field">
    <%= f.label :telephone %><br />
    <%= f.text_field :telephone, autofocus: true, autocomplete: "電話番号" %>
   </div>

  <%= fields_for @address_lines do |f| %>
  <div>
        <%= f.label :postcode %><br />
        <%= f.text_field :postcode ,placeholder: "○○○-○○○○"  %>
    </div>
    <div>
        <%= f.label :city %><br />
        <%= f.text_field :city ,placeholder: ""  %>
    </div>
    <div>
        <%= f.label :address %><br />
        <%= f.text_field :address ,placeholder: ""  %>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
